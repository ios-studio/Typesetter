#!/usr/bin/env bash

set -o pipefail

if [ -z $DESTINATION ]; then
    export DESTINATION='platform=iOS Simulator,name=iPhone 6,OS=9.2'
fi

git submodule update --init --recursive
xcodebuild -version
xcodebuild test -project Typesetter.xcodeproj -destination "$DESTINATION" -scheme Typesetter -sdk iphonesimulator BUILD_ACTIVE_ARCH=NO | xcpretty -t -c
